---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../../../../astro/ContactForm.astro';
---

<Layout colorScheme="dark">
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background-color: #222;
    }

    #contact {
      max-width: 90%;
      margin: auto;
    }

    @media (min-width: 768px) {
      #contact {
        max-width: 50%;
      }
    }
  </style>
  <div id="contact">
    <h1>Test Contact Form</h1>
	  <ContactForm url="http://localhost:8025" id="6627b0113f4c7e0d773abc2b" providerProps={{
      defaultColorScheme: 'dark'
    }}
    defaults={{
      name: 'Test'
    }}
    handler={async function (values) {
      console.log(values);

      return {
        success: true
      }
    }}
    afterSubmit={function (scroll) {
      console.log('submitted');
      scroll();
    }}
    onChange={function (values) {
      console.log(values);
    }} ssr />
  </div>
</Layout>